@model FifaDatabase.Models.Player

@{
    ViewBag.Title = "Delete";
}

<h1 align="center">Delete Player</h1>

<h4 align="center">Are you sure you want to delete this player?</h4>
<br>
<div>

    <div style="text-align: center">

        <div class="button1">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" id="buttons" class="btn btn-primary" value="Yes" />
 
                    <input type="button" id="buttons" class="btn btn-primary" value="No" onclick="location.href='@Url.Action("Index", "Player")'" />
                </div>
            }


        </div>

    </div>


    <hr />

    <div class="container">

        <div class="card">
            <img src="~/@Html.DisplayFor(model => model.Card)" />
        </div>

        <div class="traits">

            <h3>
                @Html.DisplayNameFor(model => model.Description)
            </h3>
            <br />

            <p>
                @Html.DisplayFor(model => model.Description)
            </p>

            <h3>

                @Html.DisplayNameFor(model => model.Traits)
            </h3>
            <br />
            <p>
                @Html.DisplayFor(model => model.Traits)
            </p>

            <h3>

                @Html.DisplayNameFor(model => model.Specialities)

            </h3>
            <br />
            <p>
                @Html.DisplayFor(model => model.Specialities)
            </p>

        </div>

        <div class="info">

            <h3>
                Player Info:
            </h3>
            <br />

            <table>

                <tr>
                    <td class="statname">
                        @Html.DisplayNameFor(model => model.Rating)
                    </td>

                    <td class="stat">
                        @Html.DisplayFor(model => model.Rating)
                    </td>

                </tr>

                <tr>
                    <td class="statname">
                        @Html.DisplayNameFor(model => model.Position)
                    </td>

                    <td class="stat">
                        @Html.DisplayFor(model => model.Position)
                    </td>

                </tr>

                <tr>
                    <td class="statname">
                        @Html.DisplayNameFor(model => model.Name)
                    </td>

                    <td class="stat">
                        @Html.DisplayFor(model => model.Name)
                    </td>

                </tr>

                <tr>
                    <td class="statname">
                        @Html.DisplayNameFor(model => model.Club)
                    </td>

                    <td class="stat">
                        @Html.DisplayFor(model => model.Club)
                    </td>

                </tr>

                <tr>
                    <td class="statname">
                        @Html.DisplayNameFor(model => model.League)
                    </td>

                    <td class="stat">
                        @Html.DisplayFor(model => model.League)
                    </td>

                </tr>

                <tr>
                    <td class="statname">
                        @Html.DisplayNameFor(model => model.Nation)
                    </td>

                    <td class="stat">
                        @Html.DisplayFor(model => model.Nation)
                    </td>

                </tr>

                <tr>
                    <td class="statname">
                        @Html.DisplayNameFor(model => model.Age)
                    </td>

                    <td class="stat">
                        @Html.DisplayFor(model => model.Age)
                    </td>

                </tr>

                <tr>
                    <td class="statname">
                        @Html.DisplayNameFor(model => model.Height)
                    </td>

                    <td class="stat">
                        @Html.DisplayFor(model => model.Height)
                    </td>

                </tr>

                <tr>
                    <td class="statname">
                        @Html.DisplayNameFor(model => model.Workrates)
                    </td>

                    <td class="stat">
                        @Html.DisplayFor(model => model.Workrates)
                    </td>

                </tr>

            </table>

        </div>



    </div>

</div>


